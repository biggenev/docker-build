---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-site
  labels:
    env: prod
    owner: NakoskinEvgeniy
spec:
  replicas: 2
  selector:
    matchLabels:
      project: site
  template:
    metadata:
      labels:
        project: site
    spec:
      containers:
        - name: my-site-web
          image: biggen/mysite:tagVersion
          ports:
            - containerPort: 443

---
apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: my-site-autoscaling
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: my-site
  minReplicas: 2
  maxReplicas: 5
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 70
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 80


---
apiVersion: v1
kind: Service
metadata:
  name: my-service-site
  labels:
    env: prod
    owner: NakoskinEvgeniy
spec:
  selector:
    project: site
  ports:
    - name: http-listener
      protocol: TCP
      port: 80
      targetPort: 80
    - name: https-listener
      protocol: TCP
      port: 443
      targetPort: 443
  type: LoadBalancer
